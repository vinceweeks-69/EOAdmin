<Page x:Class="WpfApp1.ButtonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d"
      Title="ButtonPage" Height="Auto" Width="Auto">

    <Grid Margin="10,10,0,0" MinHeight="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>
        
        <Button Name="BackBtn" Grid.Column="1" Content="Back" HorizontalAlignment="Left" Margin="2,10,10,10" VerticalAlignment="Top" MinWidth="80" Width="Auto" Height="20" Click="BackBtn_Click"/>
        <Button Name="SaveBtn" Grid.Column="2" Content="Save" HorizontalAlignment="Left" Margin="2,10,10,10" VerticalAlignment="Top" MinWidth="80" Width="Auto" Height="20" Click="SaveBtn_Click"/>
        <Button Name="CancelBtn" Grid.Column="3" Content="Cancel" HorizontalAlignment="Left" Margin="2,10,10,10" VerticalAlignment="Top" MinWidth="80" Width="Auto" Height="20" RenderTransformOrigin="-0.977,0.423"/>

    </Grid>
</Page>
