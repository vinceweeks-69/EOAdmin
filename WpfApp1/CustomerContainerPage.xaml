                                <Button x:Name="DeleteCustomerContainer" Text="Delete"  Grid.Column="3"  HorizontalOptions="Start" VerticalOptions="Start" Clicked="DeleteCustomerContainer_Clicked"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
            
        </Grid>
    </ScrollViewer>
</Page>
